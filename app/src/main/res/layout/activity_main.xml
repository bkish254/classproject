<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <ImageView
       android:id="@+id/laundry"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="50dp"
       android:src="@drawable/laundry" />

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_marginTop="50dp"
       android:layout_below="@+id/laundry"
       android:gravity="center"
       android:layout_height="wrap_content">
   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:text="Sign in as"
       android:textStyle="bold"
       android:textSize="20sp"/>

   <Button
      android:id="@+id/btnClient"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_marginBottom="10dp"
       android:layout_marginTop="20dp"
       android:text="CLIENT"
       android:textColor="#fff"
       android:textStyle="bold"
       android:background="@drawable/rounded_button" />

   <Button
       android:id="@+id/btnServiceProvider"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:text="SERVICE PROVIDER"
       android:textColor="#fff"
       android:textStyle="bold"
       android:background="@drawable/btnservice_provider" />
</LinearLayout>

</RelativeLayout>
